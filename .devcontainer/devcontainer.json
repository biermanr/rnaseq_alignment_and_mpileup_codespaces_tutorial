{
  "name": "RNAseq Alignment Tutorial",
  "image": "condaforge/mambaforge:latest",

  "postCreateCommand": "mamba env create -f .devcontainer/environment.yml && echo 'conda activate rnaseq' >> ~/.bashrc",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/rnaseq/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        }
      }
    }
  },

  "features": {},

  "forwardPorts": [8888],

  "remoteUser": "root"
}
