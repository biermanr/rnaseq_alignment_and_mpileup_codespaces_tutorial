{
  "name": "RNAseq Alignment Tutorial",
  "image": "ghcr.io/biermanr/rnaseq_alignment_and_mpileup_codespaces_tutorial:latest",

  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/rnaseq/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },

        "workbench.startupEditor": "none",
        "workbench.activityBar.visible": false,
        "workbench.sideBar.location": "right",
        "workbench.editor.showTabs": "single",
        "breadcrumbs.enabled": false
      }
    }
  },

  "features": {},

  "forwardPorts": [8888],

  "postAttachCommand": "echo 'Welcome to the RNAseq Alignment Tutorial!' && bash",

  "remoteUser": "root"
}
